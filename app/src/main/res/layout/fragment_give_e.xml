<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark"
    tools:context=".electronics.GiveEFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="40sp"
        android:layout_marginRight="20sp"
        android:orientation="horizontal"
        android:paddingTop="10sp"
        android:paddingBottom="10sp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/arrowl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:fontFamily="@font/arial_bold"
            android:text="Enter the details"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.457"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:layout_marginRight="24sp"
            android:orientation="vertical"
            android:background="@drawable/givebg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="20sp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/arial"
                android:text="Brand Name: "/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:paddingTop="5sp"
                android:textColor="@color/dark"
                android:textSize="14sp"
                android:fontFamily="@font/arial"
                android:hint="Brand name"
                android:backgroundTint="@color/give"
                android:paddingBottom="5sp"
                android:paddingLeft="15sp"
                android:layout_marginTop="8sp"
                android:layout_marginRight="24sp"
                android:background="@drawable/slightround"/>
            <TextView
                android:id="@+id/descp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/arial"
                android:text="Model Name: "/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:paddingTop="5sp"
                android:textColor="@color/dark"
                android:textSize="14sp"
                android:fontFamily="@font/arial"
                android:hint="Model name"
                android:backgroundTint="@color/give"
                android:paddingBottom="5sp"
                android:paddingLeft="15sp"
                android:layout_marginTop="8sp"
                android:layout_marginRight="24sp"
                android:background="@drawable/slightround"/>

            <TextView
                android:id="@+id/actype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/arial"
                android:text="Accessory type"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:paddingTop="5sp"
                android:textColor="@color/dark"
                android:textSize="14sp"
                android:fontFamily="@font/arial"
                android:hint="Accessory type"
                android:backgroundTint="@color/give"
                android:paddingBottom="5sp"
                android:paddingLeft="15sp"
                android:layout_marginTop="8sp"
                android:layout_marginRight="24sp"
                android:background="@drawable/slightround"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:layout_marginTop="10sp"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/arial"
                android:text="Sharing period"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:paddingTop="5sp"
                android:textColor="@color/dark"
                android:textSize="14sp"
                android:fontFamily="@font/arial"
                android:hint="Sharing period"
                android:backgroundTint="@color/give"
                android:paddingBottom="5sp"
                android:paddingLeft="15sp"
                android:layout_marginTop="8sp"
                android:layout_marginRight="24sp"
                android:background="@drawable/slightround"/>


            <Button
                android:id="@+id/addpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded"
                android:layout_marginTop="20sp"
                android:text="Add Photo"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:fontFamily="@font/arial"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                app:cornerRadius="30sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="40sp"
                android:textColor="@color/white"
                android:text="Share"
                android:backgroundTint="@color/pacha"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>